extends index.pug
block content
  main
    table(style='box-sizing: border-box; border-spacing: 0; padding: 0 32px;' width='100%')
      tbody
        tr
          td(colspan="2" style='font-weight: 600;padding-bottom:36px;font-size:17px;') 
            | #{greeting} #{firstName},
        tr
          td(colspan="2" style="font-size:15px;padding-bottom:36px;color:#294661;font-weight:300") 
            | #{message}
        tr 
          td(width= '10px;' style="font-size:15px;padding-bottom:6px;color:#294661;font-weight:300")  
            | #{emailText}
          td(style="font-size:15px;padding-bottom:6px;color:#294661;font-weight:300")  
            | : #{email}
        tr 
          td(width= '10px;' style="font-size:15px;padding-bottom:16px;color:#294661;font-weight:300")  
            | #{passwordText}
          td(style="font-size:15px;padding-bottom:16px;color:#294661;font-weight:300")  
            | : #{password}
        tr
          td(colspan="2" style='font-weight: 600;padding-bottom:36px;')
            div(style="text-align:center")
              button(type="button" style="background-color:#294661;color:#fff;padding:10px 20px;border:none;border-radius:5px;font-size:16px;cursor:pointer;text-decoration:none")
                a(href=loginLink style="color:#fff;text-decoration:none") Login
    